@using GPO_BLAZOR.Client.Class.Date;
@using GPO_BLAZOR.Client.Parts;
@inject NavigationManager Navigation

@page "/statmen/{Number:int}"


<body>
        @if(isLoading) {
        <div class="sidebar">
            <div class="borderBlock">
            <ul>
            @foreach (IPageValues item in Date.TextValues)
            {
                <li >
                    <div>
                        <input type="button" @onclick="()=>{_tempPage=item;}" value="@item.NamePageBlock" />
                    </div>
                </li>
            }
            </ul>
            </div >
        </div>
        <div class="content">
        <PageValuesBlock Date="_tempPage"/>
            <input class="inputbutton" type="button" value="Отправить" @onclick="SetDate" />
        </div>


    } else
    {
        <h2>
            Выполняется загрузка
        </h2>
    }

</body>



